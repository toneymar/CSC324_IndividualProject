<% provide(:title, 'All entries') %>
<h1>All Log Entries</h1>


<table width="115%">
  <thead>
    <tr>
       <th>Date</th>
       <th>Aircraft Model</th>
       <th>Aircraft Identification</th>
       <th>From</th>
       <th>To</th>
       <% if false %>
       <th>SEL</th>
       <th>MEL</th>
       <th>Ground</th>
       <th>Dual Received</th>
       <th>Pilot In Command</th>
       <th>Day</th>
       <th>Night</th>
       <th>Cross Country</th>
       <th>Actual Instrument</th>
       <th>Simulated Instrument</th>
       <th>No. Instrument Approaches</th>
       <th>No. Day Landings</th>
       <th>No. Night Landings</th>
       <% end %>
       <th>Total Duration</th>
       <% if false %>
       <th>Remarks</th>
       <% end %>
   </tr>
  </thead>
  <% @entries.each do |entry| %>
    <tr>

      <td><%= entry.date %></td>
      <td><%= entry.acft_model %></td>
      <td><%= entry.acft_ident %></td>
      <td><%= entry.from %></td>
      <td><%= entry.to %></td>
      <% if false %>
      <td><%= entry.sel %></td>
      <td><%= entry.mel %></td>
      <td><%= entry.ground %></td>
      <td><%= entry.dual_received %></td>
      <td><%= entry.pic %></td>
      <td><%= entry.day %></td>
      <td><%= entry.night %></td>
      <td><%= entry.cross_country %></td>
      <td><%= entry.actual_inst %></td>
      <td><%= entry.sim_inst %></td>
      <td><%= entry.no_inst_appr %></td>
      <td><%= entry.landings_day %></td>
      <td><%= entry.landings_night %></td>
      <% end %>
      <td><%= entry.total_duration %></td>
      <td><%= link_to "details", '/details' %></td>
      <td><%= link_to "edit", '/edit' %></td>
      <td><%= link_to "delete", entry, method: :delete, data: { confirm: "You sure?" } %></td>
      <% if false %>
      <td><%= entry.remarks %></td>
      <% end %>
    </tr>
  <% end %>
  </table>


  <%= link_to "Add New Entry", '/new', class: "btn btn-sm btn-primary" %>
